{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "declaration": true,
    "declarationDir": "./types",
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020"],
    "module": "ES2020",
    "moduleResolution": "node",
    "newLine": "LF",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020"
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules"]
}
